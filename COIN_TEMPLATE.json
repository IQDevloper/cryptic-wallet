  ],
  "type": "object",
  "required": [
    "symbol",
    "name",
    "networkType",
    "isNative",
    "decimals"
  ],
  "properties": {
    "symbol": {
      "type": "string",
      "description": "Cryptocurrency ticker symbol (e.g., BTC, ETH, SOL)",
      "pattern": "^[A-Z]{2,10}$",
      "examples": ["BTC", "ETH", "SOL", "AVAX", "USDC"]
    },
    "name": {
      "type": "string",
      "description": "Full name of the cryptocurrency",
      "examples": ["Bitcoin", "Ethereum", "Solana", "Avalanche"]
    },
    "description": {
      "type": "string",
      "description": "Brief description of the cryptocurrency (1-2 sentences)",
      "maxLength": 500
    },
    "networkType": {
      "type": "string",
      "enum": ["EVM", "UTXO", "TRON", "SOLANA", "POLKADOT", "COSMOS"],
      "description": "Type of blockchain network"
    },
    "isNative": {
      "type": "boolean",
      "description": "true = Native blockchain coin, false = Token on another chain"
    },
    "decimals": {
      "type": "integer",
      "description": "Number of decimal places for the smallest unit",
      "minimum": 0,
      "maximum": 18,
      "examples": [8, 18, 6, 9]
    },
    "derivationPath": {
      "type": "string",
      "description": "BIP44 derivation path (required for native coins)",
      "pattern": "^m/44'/\\d+'/0'/0'?$",
      "examples": [
        "m/44'/0'/0'/0",
        "m/44'/60'/0'/0",
        "m/44'/501'/0'/0'"
      ]
    },
    "coinType": {
      "type": "integer",
      "description": "BIP44 coin type number (required for native coins)",
      "minimum": 0,
      "examples": [0, 60, 501, 195, 9000]
    },
    "chainName": {
      "type": "string",
      "description": "Name of the blockchain (for native coins)",
      "examples": ["Bitcoin", "Ethereum", "Solana", "Avalanche"]
    },
    "tatumChainId": {
      "type": "string",
      "description": "Tatum API chain identifier",
      "examples": [
        "bitcoin-mainnet",
        "ethereum-mainnet",
        "bsc-mainnet",
        "solana-mainnet"
      ]
    },
    "explorerUrl": {
      "type": "string",
      "format": "uri",
      "description": "Blockchain explorer base URL",
      "examples": [
        "https://blockchain.com",
        "https://etherscan.io",
        "https://explorer.solana.com"
      ]
    },
    "blockConfirmations": {
      "type": "integer",
      "description": "Number of block confirmations required for finality",
      "minimum": 1,
      "maximum": 100,
      "default": 6,
      "examples": [6, 12, 15, 19, 32]
    },
    "networks": {
      "type": "array",
      "description": "Networks where this token is deployed (for tokens only)",
      "items": {
        "type": "object",
        "required": ["networkCode", "contractAddress", "tokenStandard"],
        "properties": {
          "networkCode": {
            "type": "string",
            "description": "Network identifier",
            "examples": ["ethereum", "bsc", "polygon", "tron", "arbitrum"]
          },
          "contractAddress": {
            "type": "string",
            "description": "Smart contract address on this network",
            "pattern": "^0x[a-fA-F0-9]{40}$|^T[a-zA-Z0-9]{33}$",
            "examples": [
              "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48",
              "0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d"
            ]
          },
          "tokenStandard": {
            "type": "string",
            "description": "Token standard used",
            "enum": ["ERC-20", "BEP-20", "Polygon", "TRC-20", "SPL"],
            "examples": ["ERC-20", "BEP-20", "TRC-20"]
          }
        }
      }
    },
    "logoUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to cryptocurrency logo image",
      "examples": ["https://cryptologos.cc/logos/bitcoin-btc-logo.png"]
    },
    "tatumSupported": {
      "type": "boolean",
      "description": "Whether Tatum API supports this cryptocurrency",
      "default": true
    },
    "kmsChainCode": {
      "type": "string",
      "description": "Chain code for Tatum KMS wallet generation (for native coins)",
      "pattern": "^[A-Z]{2,10}$",
      "examples": ["BTC", "ETH", "SOL", "BSC", "AVAX"]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "isNative": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "derivationPath",
          "coinType",
          "chainName",
          "tatumChainId",
          "blockConfirmations",
          "kmsChainCode"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "isNative": {
            "const": false
          }
        }
      },
      "then": {
        "required": ["networks"]
      }
    }
  ]
}
