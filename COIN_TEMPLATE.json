      "decimals": 8,
      "derivationPath": "m/44'/2'/0'/0",
      "coinType": 2,
      "chainName": "Litecoin",
      "tatumChainId": "litecoin-mainnet",
      "explorerUrl": "https://blockchair.com/litecoin",
